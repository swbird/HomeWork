contract BirdBank is Ownable {
    using SafeMath for uint;
    struct userInfo {
        // address user;
        uint count;
        uint userTotalETH;
        uint lastWithdrawTime;
    }
    mapping(address=>userInfo) public users;
    event depositAction(address user, uint amount, uint time);
    event withdrawAction(address user, uint amount, uint time);
    receive () payable external {
        userInfo memory userInfoTemp = userInfo(
            users[msg.sender].count+1,
            users[msg.sender].userTotalETH+msg.value,
            0
        );
        users[msg.sender] = userInfoTemp;
        emit depositAction(msg.sender, msg.value, block.timestamp);
    } // 接受ETH

    function userWithDrawETH() public {
        require(users[msg.sender].userTotalETH>0,"no more eth to withdraw!");
        (payable(msg.sender)).transfer(users[msg.sender].userTotalETH);
        emit withdrawAction(msg.sender, users[msg.sender].userTotalETH, block.timestamp);
        users[msg.sender].userTotalETH = 0;
        users[msg.sender].count += 1;
        users[msg.sender].lastWithdrawTime = block.timestamp;
        
    }

    function emergencyWithdrawEtherByOwner() public onlyOwner {
        (payable(owner())).transfer(address(this).balance);
    }
}